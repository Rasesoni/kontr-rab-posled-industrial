#include <iostream>
#include <map>
#include <string>
using namespace std;

int countingwords(string text){
    map<string, int> words;
    string word = "";

    for(int i = 0; i < text.length(); i++){
        char c = text[i];
        if (c == ' '){
            if (!word.empty()){ 
                words[word]++;
                word = ""; 
            }
        } else {
            word += c; 
        }
    }
    if (!word.empty()){
        words[word]++;
    }
    cout << "Список слов и количество их повторений: ";
    for (const auto& pair : words) {
        cout << pair.first << ": " << pair.second << endl;
    }

    return words.size(); 
}

int main(){
    string text;
    cout << "Введите строку: ";
    getline(cin, text);

    int uniqueWordsCount = countingwords(text);
    cout << "количество уникальных слов: " << uniqueWordsCount << endl;

    return 0;
}
